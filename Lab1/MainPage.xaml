<Page
    x:Class="Lab1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas Background="Aqua" Margin="140,25,140,10" x:Name="canvas_name" Width="1000">
            <Image x:Name="birdImgOne" Source="Assets/bird/bird_01.jpg" ManipulationDelta="bird_1" Canvas.Left="36" Canvas.Top="36">
                <Image.RenderTransform>
                    <CompositeTransform x:Name="birdOneTransform"/>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="grid" Source="Assets/grid.png" Canvas.Left="36" Canvas.Top="130"></Image>


            <Image x:Name="ell" Source="Assets/bird/bird_01.jpg"  ManipulationMode="All" ManipulationDelta="ell_ManipulationDelta">
                <Image.RenderTransform>
                    <CompositeTransform x:Name="trans"/>
                </Image.RenderTransform>
            </Image>

        </Canvas>
        <TextBlock x:Name="textblock_lbl" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Page>
